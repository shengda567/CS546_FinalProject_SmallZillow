<div class="signup-div" id="signup-div">
    <h2 id="manager-signup-p">Sign Up</h2>
   <div class="row" id="manager-signup-container">
        <form id="signup-form" name="signupForm" class="register-form" method="POST" action='/managers'>
            <p>
                <label for="username">UserName:</label>
                <input type="text" name="username" id="username" class="inputFields" placeholder="UserName" required />
            </p>

            <p>
                <label for='password'>Password:</label>
                <input type="password" name="password" id="password" class="inputFields" placeholder="Password" required />
            </p>

            <p>
                <label>Email:</label>
                <input type="email" name="email" id="email" class="inputFields" placeholder="Email" required />
            </p>

            <p>
                <label>manager level:</label>
                <input type="text" name="manager_level" id="manager_level" class="inputFields" placeholder="manager level" required />
            </p>

            <p>
                <label>manager verify code:</label>
                <input type="text" name="managerCode" id="managerCode" class="inputFields" placeholder="manager Code" required />
            </p>

                <div id='register-error' hidden></div>

            <p>
                <button type="submit" class="btn" id='submit-user'>Signup</button>
            </p>



            <div>
                {{#if hasErrors}}
                <div class="r-error">
                    <ul>
                        {{#each errors}}
                        <li>
                            {{this}}
                        </li>
                        {{/each}}
                    </ul>
                </div>
                {{/if}}
            </div>
        </form>
    </div>

</div>
<script src="/public/js/admin_signup.js"></script>