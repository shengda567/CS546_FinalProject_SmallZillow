<div class="container"id="user-info-container">
  <h3>My profile: <button id="edit-profile-button" type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">Edit Profile</button></h3>
  <div class="modal fade" id="myModal">
    <div class="modal-dialog modal-dialog-centered modal-lg">
      <div class="modal-content" id="modal-content-backgroud">

        <!-- Modal Header -->
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Edit Profile</h4>
        </div>

        <!-- Modal body -->
        <div class="modal-body">
          <form id="user-account-update-form">
            <div class="form-group row">
              <label for="username" class="col-sm-3 col-form-label">Username: </label>
              <div class="col-sm-9">
                <input type="text" class="form-control input-lg" id="username" value={{user.username}}>
              </div>
            </div>
            <div class="form-group row">
              <label for="email" class="col-sm-3 col-form-label">Email: </label>
              <div class="col-sm-9">
                <input type="text" class="form-control input-lg" id="email" value={{user.email}}>
              </div>
            </div>
            <div class="form-group row">
              <label for="gender" class="col-sm-3 col-form-label">Gender: </label>
              <div class="col-sm-9">
                <input type="text" class="form-control input-lg" id="gender" value={{user.gender}}>
              </div>
            </div>

            <div class="form-group row">
              <label for="address" class="col-sm-3 col-form-label">Address: </label>
              <div class="col-sm-9">
                <input type="text" class="form-control input-lg" id="address" value={{user.address}}>
              </div>
            </div>

            <div class="form-group row">
              <label for="BOD" class="col-sm-3 col-form-label">Bod: </label>
              <div class="col-sm-9">
                <input type="text" class="form-control input-lg" id="BOD" value={{user.BOD}}>
              </div>
            </div>

            <div class="form-group row">
              <label for="phone" class="col-sm-3 col-form-label">Phone: </label>
              <div class="col-sm-9">
                <input type="text" class="form-control input-lg" id="phone" value={{user.phone}}>
              </div>
            </div>
            <div class="modal-footer">
              <button type="submit" class="btn btn-danger btn-lg" data-dismiss="modal" id="user-account-edit-save-button">Save</button>
            </div>

          </form>
        </div>


      </div>
    </div>
  </div>
  <dl class="row">
    <dt class="col-sm-3">Username:</dt>
    <dd class="col-sm-9">{{user.username}}</dd>

    <dt class="col-sm-3">Email:</dt>
    <dd class="col-sm-9">{{user.email}}</dd>

    <dt class="col-sm-3">Gender:</dt>
    <dd class="col-sm-9">{{user.gender}}</dd>

    <dt class="col-sm-3">Address:</dt>
    <dd class="col-sm-9">{{user.address}}</dd>

    <dt class="col-sm-3">Bod:</dt>
    <dd class="col-sm-9">{{user.BOD}}</dd>

    <dt class="col-sm-3">Phone:</dt>
    <dd class="col-sm-9">{{user.phone}}</dd>
  </dl>
</div>

<div class="container" id="user-posts-container">
  <h3>My Posts: <a href="http://localhost:3000/newpost" role="button" class="btn btn-primary btn-lg">Creat New Post</a></h3>
  <dl class="row">
    {{#each posts}}

      <dt class="col-sm-7"><a href="http://localhost:3000/posts/{{this.id}}">{{this.title}}</a></dt>
      <dd class="col-sm-5"><a href="http://localhost:3000/login/userSinglePost/{{this.id}}" role="button" class="btn btn-primary btn-lg">Edit Post</a></dd>
    {{/each}}
  </div>


</div>
<script src="/public/js/userDetailsUpdate.js"></script>
