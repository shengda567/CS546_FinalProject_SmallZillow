<div class="container" id="user-info-container">
  <div id="userDetailErrorLists_div" hidden> Sorry, your save failed and here are errors:
    <ul id="userDetailErrorLists_ul"></ul>
  </div>

  <p class="user-account-p">My profile: <button id="edit-profile-button" type="button" class="btn btn-primary btn-lg" data-toggle="modal"
      data-target="#myModal">Edit Profile</button> <a href="/change" class="btn btn-primary btn-lg" role="button" id="Changepassword">Change Password</a></p>

  <div class="modal fade" id="myModal">
    <div class="modal-dialog modal-lg" id="user-profile-edit-modal">
      <div class="modal-content" id="user-profile-edit-modal-content-backgroud">

        <!-- Modal Header -->
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Edit Profile</h4>
        </div>

        <!-- Modal body -->
        <div class="modal-body">
          <form id="user-account-update-form">
            <div class="form-group row">
              <label for="username" class="col-sm-3 col-form-label">Username: </label>
              <div class="col-sm-9">
                <input readonly type="text" class="form-control input-lg" id="username" value={{user.username}}>
              </div>
            </div>
            <div class="form-group row">
              <label for="email" class="col-sm-3 col-form-label">Email: </label>
              <div class="col-sm-9">
                <input placeholder="123456@gmail.com" type="text" class="form-control input-lg" id="email"
                  value={{user.email}}>
              </div>
            </div>
            <div class="form-group row">
              <label for="gender" class="col-sm-3 col-form-label">Gender: </label>
              <div class="col-sm-9">
                <input placeholder="male" type="text" class="form-control input-lg" id="gender" value={{user.gender}}>
              </div>
            </div>

            <div class="form-group row">
              <label for="address" class="col-sm-3 col-form-label">Address: </label>
              <div class="col-sm-9">
                <input type="text" class="form-control input-lg" id="address" value={{user.address}}>
              </div>
            </div>

            <div class="form-group row">
              <label for="BOD" class="col-sm-3 col-form-label">Bod: </label>
              <div class="col-sm-9">
                <input placeholder="01/01/2000" type="text" class="form-control input-lg" id="BOD" value={{user.BOD}}>
              </div>
            </div>

            <div class="form-group row">
              <label for="phone" class="col-sm-3 col-form-label">Phone: </label>
              <div class="col-sm-9">
                <input placeholder="123-123-1234" type="text" class="form-control input-lg" id="phone"
                  value={{user.phone}}>
              </div>
            </div>
            <div class="modal-footer">
              <button type="submit" class="btn btn-danger btn-lg" data-dismiss="modal"
                id="user-account-edit-save-button">Save</button>
            </div>

          </form>
        </div>


      </div>
    </div>
  </div>



  <dl class="row">
    <dt class="col-sm-3">Username:</dt>
    <dd class="col-sm-9">{{user.username}}</dd>

    <dt class="col-sm-3">Email:</dt>
    <dd class="col-sm-9">{{user.email}}</dd>

    <dt class="col-sm-3">Gender:</dt>
    <dd class="col-sm-9">{{user.gender}}</dd>

    <dt class="col-sm-3">Address:</dt>
    <dd class="col-sm-9">{{user.address}}</dd>

    <dt class="col-sm-3">Bod:</dt>
    <dd class="col-sm-9">{{user.BOD}}</dd>

    <dt class="col-sm-3">Phone:</dt>
    <dd class="col-sm-9">{{user.phone}}</dd>
  </dl>
</div>

<div class="container" id="user-posts-container">

  <form id="user-account-post-form">
    <p class="user-account-p">My Posts:
      <a href="http://localhost:3000/newpost" role="button" class="btn btn-primary btn-lg">Creat New Post</a>
      <button id="edit-post-button" type="submit" class="btn btn-primary btn-lg" data-toggle="modal"
        data-target="#myPost">Edit Post</button>
      <button id="delet-post-button" type="submit" class="btn btn-primary btn-lg" data-toggle="modal"
        data-target="#deleteModal">Delete Post</button>
    </p>
    <dl class="row" id="user-posts-dl-container">
      {{#each posts}}
      
        <dt class="col-sm-1">
          <label for="{{this.id}}" hidden></label>
          <input type="radio" id="{{this.id}}" class="user-posts-dt-radio" name="post-radio" value="{{this.id}}">
        </dt>
      

      <dd class="col-sm-11"><a class="user-posts-a" href="/posts/{{this.id}}">{{this.title}}</a></dd>

      {{/each}}
    </dl>
  </form>

  <div class="modal fade" id="deleteModal" role="dialog">
    <div class="modal-dialog" id="delete-post-modal">

      <!-- Modal content-->
      <div class="modal-content" id="user-delete-post-modal-content-backgroud">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Delete Post Info: </h4>
        </div>
        <div class="modal-body">
          <p hidden id='delete-post-id'></p>
          <p id="delete-modal-body-p"></p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn-danger btn-lg" id="delete-yes" data-dismiss="modal">Yes</button>
          <button type="button" class="btn btn-lg" data-dismiss="modal">No</button>
        </div>
      </div>

    </div>
  </div>

